<%= form_for [refinery, :tenants_admin, @tenant] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @tenant,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :logo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :logo_id,
               :image => @tenant.logo,
               :toggle_image_display => false %>

  </div>
  
    <div class='field'>
    <%= f.label "Broker" -%>
	<%= f.select "broker_ids", @brokers.collect {|x| [x.name, x.id]}, {}, :multiple => true %>

  </div>
  
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.tenants.admin.tenants.tenant'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @tenant.name) %>
<% end -%>
