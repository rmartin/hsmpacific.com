<% content_for :body_content_title do %>
  <%= @tenant.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @tenant.name %>
    </p>
  </section>
  <section>
    <h1>Logo</h1>
    <p>
      <%= image_fu @tenant.logo, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="tenants">
      <% @tenants.each do |tenant| %>
        <li>
          <%= link_to tenant.name, refinery.tenants_tenant_path(tenant) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
