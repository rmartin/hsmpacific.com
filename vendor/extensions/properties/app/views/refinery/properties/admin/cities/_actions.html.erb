<ul>
  <% if ::Refinery::Properties::Admin::CitiesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.properties_admin_cities_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_properties_admin_city_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Properties::Admin::CitiesController.sortable? && ::Refinery::Properties::City.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Cities"),
                 refinery.properties_admin_cities_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Cities"),
                 refinery.properties_admin_cities_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
