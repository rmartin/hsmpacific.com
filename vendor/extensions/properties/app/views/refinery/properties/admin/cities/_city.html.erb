<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(city) -%>">
  <span class='title'>
    <%= city.name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.properties_city_path(city),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_properties_admin_city_path(city),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.properties_admin_city_path(city),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => city.name),
        :method => :delete %>
  </span>
</li>
