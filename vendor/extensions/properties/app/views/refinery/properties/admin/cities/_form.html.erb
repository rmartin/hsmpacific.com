<%= form_for [refinery, :properties_admin, @city] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @city,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.cities.admin.cities.city'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @city.name) %>
<% end -%>
